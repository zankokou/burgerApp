<div class='container jumbotron burgerTop'>
  <h1>Burgers!</h1>
  <br>
  <br>
  <div class='row'>
    <div class='col'>
      <h3>Burgers Ready to Eat!</h3>

      <ul>
        {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}
      </ul>
    </div>



    <div class='col'>
      <h3>Burgers you ate</h3>

      <ul>
        {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=false}} {{/if}} {{/each}}
      </ul>
    </div>

    {{!-- end of row --}}
  </div>

</div>


<div class='container jumbotron'>
  <h2>Create your own Burger below!</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Enter Here!</label>
      <input type="text" id="ca" name="burger_name"required>
    </div>

